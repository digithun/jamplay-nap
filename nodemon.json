{
  "restartable": false,
  "verbose": true,
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    ".next",
    "*.test.js",
    "*__",
    "coverage",
    ".tmp/*"
  ],
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "server",
    "notification",
    "graphql",
    "providers",
    "routes",
    "bigquery"
  ],
  "ext": "js json"
}